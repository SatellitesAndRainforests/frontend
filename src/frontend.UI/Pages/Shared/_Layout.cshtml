@using GovUk.Frontend.AspNetCore

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - frontend.UI</title>

    <!-- Include Bootstrap and custom CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/frontend.UI.styles.css" asp-append-version="true" />

    <!-- Include GOV.UK Design System CSS using helper -->
    @Html.GovUkFrontendStyleImports()
</head>
<body>

    <!-- Initialize GOV.UK JavaScript enhancements -->
    @Html.GovUkFrontendJsEnabledScript()

    @{
        Layout = "_GovUkPageTemplate";
    }

    @section Header {
        @* your header markup goes here *@
    }

    @RenderBody()

    @section Footer {
        @* your footer markup goes here *@
    }

    <!-- Include jQuery, Bootstrap, and custom JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Include GOV.UK Design System JavaScript using helper -->
    @Html.GovUkFrontendScriptImports()

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
